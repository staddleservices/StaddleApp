<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/regactbanner">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="May i know your details?"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    />
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/mobileotpedittext"
                android:fontFamily="@font/mainthinfont"
                android:hint="Your Name"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:id="@+id/edt_email_id"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/mobileotpedittext"
                android:fontFamily="@font/mainthinfont"
                android:hint="Your Email"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

                <Button
                    android:id="@+id/btnsbumitreg"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mainboldfont"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/loginscreenmobile"

                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
