<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_dialog">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:elevation="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Item Name"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/dialog_cencel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_sub_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_sub_condition"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:text="Select Quantity"
        android:textColor="#435C5C"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/layout_inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dialog_info"
        android:layout_alignEnd="@+id/dialog_add"
        android:layout_alignRight="@+id/dialog_add"
        android:background="@drawable/border_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_decrease"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_minus" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#435C5C" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Select"
            android:textAlignment="center"
            android:textColor="#435C5C"
            android:textSize="13dp"
            android:typeface="serif" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#435C5C" />


        <ImageView
            android:id="@+id/img_increase"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_add" />

    </LinearLayout>

    <Button
        android:id="@+id/dialog_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/layout_inc"
        android:layout_margin="15dp"
        android:elevation="40dp"
        android:text="add to cart"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>
