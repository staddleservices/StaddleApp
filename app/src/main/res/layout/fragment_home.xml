<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:visibility="visible"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/nested_scroll_view"
        android:overScrollMode="never"
        android:visibility="gone"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_marginTop="10dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager_home_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkGrey" />

                </android.support.v7.widget.CardView>



                <LinearLayout
                    android:id="@+id/ll_dots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:weightSum="4"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/ll_beauty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:background="@drawable/white_border">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="7dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_beauty"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/white_border"
                                android:scaleType="fitXY"
                                android:src="@drawable/wig"
                                tools:ignore="ContentDescription" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_beauty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/mainthinfont"
                        android:text="Beauty \nSalon"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_spa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:background="@drawable/white_border">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="7dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_spa"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/white_border"
                                android:scaleType="fitXY"
                                android:src="@drawable/spaiconhome"
                                tools:ignore="ContentDescription" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_spa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Spa \n"
                        android:fontFamily="@font/mainthinfont"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_house"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:background="@drawable/white_border">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="7dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_house"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/white_border"
                                android:scaleType="fitXY"
                                android:src="@drawable/windowcleaner"
                                tools:ignore="ContentDescription" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_house"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="House \nKeeping"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mainthinfont"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_security"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:background="@drawable/white_border">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            app:cardCornerRadius="7dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_security"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/white_border"
                                android:scaleType="fitXY"
                                android:src="@drawable/police"
                                tools:ignore="ContentDescription" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Security"
                        android:textColor="#000000"
                        android:fontFamily="@font/mainthinfont"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/productlist_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llMain"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <TextView
            android:id="@+id/txtNoMeassage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMain"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:text="Coming to your city soon"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

    </RelativeLayout>


    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:orientation="vertical"
        app:shimmer_duration="800">

        <!-- Adding 7 rows of placeholders -->

        <include layout="@layout/home_frag_shimmer" />


    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>