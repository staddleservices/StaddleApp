<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <android.support.v7.widget.CardView
        android:id="@+id/dialogboxcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dialogboxcardviewtag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/coupontagdialogbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

            <RelativeLayout
                android:id="@+id/cnameheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialogboxcardviewtag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/couponnamebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mainthinfont"
                android:textStyle="bold"
                android:text="NOVBR40"
                android:textColor="#000000"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text=" applied!"
                    android:textSize="13dp"
                    android:layout_toRightOf="@+id/couponnamebox"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cnameheading"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/ttldiscountam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainboldfont"
                    android:text="₹120"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/app_color_2"/>

                <TextView
                    android:id="@+id/descdiscountam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:textSize="13dp"
                    android:text="You have availed total discount of ₹120."
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ttldiscountam"/>


                <TextView
                    android:id="@+id/okaywesometext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descdiscountam"
                    android:fontFamily="@font/mainboldfont"
                    android:text="AWESOME!"
                    android:textColor="@color/colorRed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>