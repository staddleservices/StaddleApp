<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <android.support.v7.widget.CardView
        android:id="@+id/dialogboxcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/dialogboxcardviewtagfailed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/searchingfailed"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialogboxcardviewtagfailed"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/invalidtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text=" Your promo code is invalid."
                    android:textColor="@color/colorRed"
                    android:layout_centerHorizontal="true"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/invalidboxokaybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainboldfont"
                    android:text="Okay"
                    android:textColor="@color/app_color_2"

                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/invalidtext"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>