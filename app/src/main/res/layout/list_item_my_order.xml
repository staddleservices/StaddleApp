<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:fontFamily="@font/mainthinfont"
                    android:textStyle="bold"
                    android:textColor="@color/app_color"
                    android:textSize="12dp"
                    android:text="Venkat Spa and Beauty Services" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_centerVertical="true"
                    android:textSize="10dp"
                    android:text="jaipur" />

                <TextView
                    android:id="@+id/tv_order_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_alignParentRight="true"
                    android:textSize="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="10/9/2019"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="3 X items"
                    android:fontFamily="@font/mainboldfont"
                    android:textColor="@color/app_color_2"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookingdatetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Booking Date:"
                    android:fontFamily="@font/mainboldfont"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtBookBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/mainthinfont"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:layout_toEndOf="@+id/bookingdatetxt"
                    android:layout_centerVertical="true"
                    android:text="12/9/2019" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_total_amounttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Total amount:"
                    android:fontFamily="@font/mainboldfont"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/mainthinfont"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_total_amounttt"
                    android:maxLines="1"
                    android:text="220 rs" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStaus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Order Status:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/mainboldfont"
                     />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/txtStaus"
                    android:layout_toStartOf="@+id/btnRate"
                    android:maxLines="1"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_centerVertical="true"
                    android:text="pending"
                    android:textSize="12dp"
                    tools:ignore="RelativeOverlap" />

                <Button
                    android:id="@+id/btnRate"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:background="@drawable/order_button_shap"
                    android:gravity="center"
                    android:text="Rate Now"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Order OTP:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/mainboldfont"
                    />

                <TextView
                    android:id="@+id/txt_otp_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/text_otp"
                    android:maxLines="1"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_centerVertical="true"
                    android:text="8978"
                    android:textSize="12dp"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>