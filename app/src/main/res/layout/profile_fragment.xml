<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout android:id="@+id/headerLayoutProfile"
        android:background="#FFFFFF"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color_2">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/mainboldfont"
            android:textColor="#FFFFFF"
            android:textSize="15dp"


            android:text="Profile"/>



    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/headerLayoutProfile"
        android:background="@drawable/toolbardropshadow"/>




        <LinearLayout
            android:id="@+id/layoutprofilecontent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/headerLayoutProfile"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/usernameprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainboldfont"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:text="USER NAME"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/app_color_2"
                    />

                <TextView
                    android:id="@+id/emailcontactprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:text="+91123456789  |  user@example.com"
                    android:textSize="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/usernameprofile"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"

                    >

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/myfavlayourprofile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="My Favorite"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/graybtns"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/payment_methods"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="Payment Methods"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/graybtns"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/helpIntenttxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="24x7 Help"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>


                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="My Orders"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />

                        <ImageView
                            android:id="@+id/arrowdropdownMyOrders"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/arrowdropdown"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"/>
                        <ImageView
                            android:id="@+id/arrowdropupMyOrders"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/arrowdropup"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="invisible"/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/myordersRecyclerlayoutProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        android:layout_marginTop="0dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/RecyclerviewMyOrders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/inviteFriendsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="Invite friends"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/graybtns"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="Policy"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/graybtns"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/aboutUsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="About us"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/proceedarrowvect"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/graybtns"
                            android:layout_alignParentBottom="true"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutlLogout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mainboldfont"
                            android:text="Logout"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:textSize="13dp"
                            />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/turnofflogoutswitch"/>


                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/appVersionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="App version 10.2.2"
                    android:textSize="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>
       <com.facebook.shimmer.ShimmerFrameLayout
           android:id="@+id/shimmerviewprofile"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:shimmer_base_color="#FFFFFF"
           android:layout_gravity="center"

           android:orientation="vertical"
           android:visibility="visible"
           app:shimmer_duration="800">

           <!-- Adding 7 rows of placeholders -->

               <include layout="@layout/profile_frag_shimmer"
                   />


       </com.facebook.shimmer.ShimmerFrameLayout>

   </LinearLayout>






</RelativeLayout>