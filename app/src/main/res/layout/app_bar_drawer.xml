<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7">

            <RelativeLayout
                android:id="@+id/rel_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_7"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_menu_toolbar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/menuicon" />

                <RelativeLayout
                    android:id="@+id/relSearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/iv_menu_toolbar"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/locationtag"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/locationiconblue"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@+id/locationtag"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/mainthinfont"
                        android:text="401,Roshni Enclave,Mansrover"
                        android:textSize="12dp"
                        android:textAlignment="viewStart"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"/>

<!--                    <ImageView-->
<!--                        android:id="@+id/iv_search"-->
<!--                        android:layout_width="@dimen/margin_20"-->
<!--                        android:layout_height="@dimen/margin_20"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_centerInParent="true"-->
<!--                        android:layout_gravity="right"-->
<!--                        android:layout_marginEnd="@dimen/margin_7"-->
<!--                        android:src="@drawable/search_icon" />-->
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_notification"
                style="@android:style/Widget.ActionButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">

                <ImageView
                    android:id="@+id/iv_bell"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="bell"
                    android:src="@drawable/notificationbelltag" />


                <TextView
                    android:id="@+id/txt_bell_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_bell"
                    android:layout_alignRight="@id/iv_bell"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rounded_square"
                    android:gravity="center_vertical"
                    android:minWidth="15sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="1dp"
                    android:text="2"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/searchservicesbox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mobileotpedittext"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/mainthinfont"
                android:hint="Search for services"
                android:textSize="12dp"
                android:textAlignment="textStart"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>



        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/content_home" />

</LinearLayout>
