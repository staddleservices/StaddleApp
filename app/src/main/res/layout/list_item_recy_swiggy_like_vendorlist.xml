<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="10dp"

    app:contentPadding="2dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:padding="3dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_offer_image"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/saloon1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            app:riv_border_color="@android:color/white"
            app:riv_border_width="2dp"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />



            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Item Name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_offer_image"
                android:fontFamily="@font/mainboldfont"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:typeface="serif"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="location"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_offer_image"
                android:layout_below="@+id/txt_name"
                android:fontFamily="@font/mainthinfont"
                android:textSize="12dp"
                android:typeface="serif"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/mainthinfont"
                android:text="20 % OFF"
                android:layout_below="@+id/txtTiming"
                android:layout_toRightOf="@+id/iv_offer_image"
                android:textColor="#FF4500"
                android:textSize="12dp"
                android:typeface="serif"
                android:layout_marginLeft="5dp"
                tools:ignore="HardcodedText" />



                <TextView
                    android:id="@+id/txtTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Timeing"
                    android:textSize="10dp"
                    android:layout_toRightOf="@+id/iv_offer_image"
                    android:layout_below="@+id/txt_location"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/mainthinfont"
                    android:typeface="serif"
                    tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/app_color_2"
            >

                <TextView
                    android:id="@+id/tv_item_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/mainthinfont"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="4.3"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />
        </androidx.cardview.widget.CardView>




    </RelativeLayout>

</androidx.cardview.widget.CardView>