<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/addressItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addressNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainboldfont"
            android:text="Office"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/addressfielditem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainthinfont"
            android:textSize="13dp"
            android:layout_below="@+id/addressNickName"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="Bhamashah Data Center , DOIT , Jaipur, Jhalana Doongri, Jaipur, Jaipur, Rajasthan 302004"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_below="@+id/addressfielditem"
            android:background="@color/grey_background"/>
    </RelativeLayout>

</RelativeLayout>