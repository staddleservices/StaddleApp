                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textColor="#c9c9c9"
                            android:background="@drawable/mobileotpedittext"
                            android:layout_marginBottom="5dp"/>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
