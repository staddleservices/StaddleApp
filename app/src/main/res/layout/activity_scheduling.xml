<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SchedulingActivity">

    <RelativeLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_color_2"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backbtntiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icbackarrowbtn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainboldfont"
            android:text="Schedule your service"
            android:layout_toEndOf="@+id/backbtntiming"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/HeaderLayout"
        android:background="@drawable/toolbardropshadow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/mainthinfont"
            android:text="Select the day or date"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/getDateEditext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/mobileotpedittext"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Select date"
            android:textSize="15dp"
            android:textAlignment="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:fontFamily="@font/mainboldfont"
            android:textColor="@color/app_color_2"
            android:textColorHint="@color/app_color_2"
            android:layout_marginTop="10dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/selecttimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainthinfont"
            android:text="At what time professionals should arrive?"
            android:textSize="13dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selecttimetxt"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <RelativeLayout
